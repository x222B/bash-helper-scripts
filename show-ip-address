#!/usr/bin/env bash

readonly argv0="$0"
# readonly url='https://api.ipify.org'
readonly url='https://ip.mariya.ch'
declare -i full=0

usage() {
    echo "usage: $argv0 [-f]"
    exit 1
}

indent() {
    sed 's/^/          /'
}

while getopts f OPT; do
    case $OPT in
        f) full=1 ;;
        *) usage ;;
    esac
done
shift $((OPTIND - 1))
OPTIND=1

ip_address=$(ip address show  | grep -Po 'inet \K[\d.]+')
if ((full)); then
    echo "SSID:     $(iwgetid -r)"
    echo "Internal: $(head -n 1 <<< "$ip_address")"
    #tail -n -1 <<< "$ip_address" | indent
    echo "External: $(curl -s "$url")"
else
    echo "SSID:     $(iwgetid -r)"
    echo "Internal: $(head -n 1 <<< "$ip_address")"
    tail -n -1 <<< "$ip_address" | indent
fi
